# define colors for windows:
#class		        	border		bground		text		indicator	child_border
client.focused		    $lightblue	$darkgrey 	$white		$purple		$orange
client.unfocused	    $darkblue	$darkgrey 	$grey		$purple		$darkgrey
client.focused_inactive	$darkblue	$darkgrey 	$grey		$purple		$black
client.urgent		    $urgentred	$urgentred	$white		$purple		$yellowbrown


############################################
# bar settings #
############################################
bar {

    position top
    status_command i3status-rs $HOME/.config/i3/config.toml
    strip_workspace_numbers yes
    colors {
        separator #666666
        background #222222
        statusline #dddddd
        focused_workspace #0088CC #0088CC #ffffff
        active_workspace #333333 #333333 #ffffff
        inactive_workspace #333333 #333333 #888888
        urgent_workspace #2f343a #900000 #ffffff
    }
}
#####################################
# Application menu handled by rofi: #
#####################################

## rofi bindings fancy application menu (two bindings F9/$mod+d)

bindsym $mod+d exec bash ~/.config/rofi/launchers/type-2/launcher.sh
bindsym F9 exec rofi-show drun 
## rofi bindings for window menu (two bindings F10/$mod+t)

bindsym $mod+t exec bash ~/.config/rofi/launchers/type-2/launcher2.sh


bindsym F11 exec rofi -show -dmenu  ~/.config/rofi/powermenu.sh
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym h           resize shrink width 10 px or 10 ppt
    bindsym j           resize grow height 10 px or 10 ppt
    bindsym k           resize shrink height 10 px or 10 ppt
    bindsym l   resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Escape mode "default"
}

# Enter resize mode
bindsym $mod+r mode "resize"
