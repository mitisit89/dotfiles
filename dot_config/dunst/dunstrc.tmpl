{{ if eq .chezmoi.hostname "debian"}}
#----------------------------------------------------------------------------------
# NOTE: The notifications set here are strictly shaped for a 1920x1080 display.
#
# Format parameters:
#
#   %a - appname
#   %s - summary
#   %b - body
#   %i - iconname (including its path)
#   %I - iconname (without its path)
#   %p - progress value if set ([  0%] to [100%]) or nothing
#----------------------------------------------------------------------------------

[global]
  font = Noto Sans 14
  markup = yes
  format = "<b>%s</b>\n%b"  
  vertical_alignment = center
  sort = yes
  indicate_hidden = no
  alignment = center
  show_age_threshold = -1
  word_wrap = yes
  ignore_newline = no
  origin =  top-right 
  ignore_newline = no
  shrink = no
  transparency = 0
  idle_threshold = 70
  monitor = 0
  follow = mouse
  sticky_history = yes
  history_length = 5
  show_indicators = No
  line_height = 4
  separator_height = 10
  padding = 7
  horizontal_padding = 0
  separator_color = frame
  browser = /usr/bin/firefox
  icon_position = left
  icon_theme = Papirus-Dark
  enable_recursive_icon_lookup = true  
  frame_color = "#11111B"
  separator_color= frame
  timeout = 6
  idle_threshold=11
  min_icon_size=32
  max_icon_size = 32

[urgency_low]
background = "#11111B"
foreground = "#CDD6F4"

[urgency_normal]
background = "#11111B"
foreground = "#CDD6F4"

[urgency_critical]
background = "#11111B"
foreground = "#CDD6F4"
frame_color = "#FAB387"
{{end}}
